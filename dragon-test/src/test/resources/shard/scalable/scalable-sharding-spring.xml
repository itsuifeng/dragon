<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-clusterInstance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--配置Dragon数据源-->
    <bean id="dragon-datasource" class="com.tianshouzhi.dragon.shard.jdbc.datasource.DragonShardingDataSource">
        <constructor-arg value="shard/scalable/scalable-sharding.properties"/>
    </bean>
    <!--配置Mybatis-->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property dsName="dataSource" ref="dragon-datasource"></property>
        <property dsName="configLocation" value="mybatis/mybatis-config.xml"></property>
    </bean>
</beans>